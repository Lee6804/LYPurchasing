/** 颜色*/
#define RGBColor(r,g,b)  [UIColor colorWithRed:(r)/255.0f green:(g)/255.0f blue:(b)/255.0f alpha:1]
#define RGBAColor(r,g,b,a)  [UIColor colorWithRed:(r)/255.0f green:(g)/255.0f blue:(b)/255.0f alpha:(a)]
#define RGB16Color(rgbValue)  [UIColor colorWithRed:((float)((rgbValue& 0xFF0000) >>16))/255.0 green:((float)((rgbValue&  0xFF00)  >>8))/255.0 blue:((float)(rgbValue&  0xFF))/255.0 alpha:1.0]

#define MAINCOLOR [UIColor colorWithRed:216.0/255.0 green:30.0/255.0 blue:6.0/255.0 alpha:1]
#define BACKGROUNDCOLOR [UIColor colorWithRed:240.0/255.0 green:240.0/255.0 blue:240.0/255.0 alpha:1]
#define TABBACKGCOLOR RGB16Color(0xFFF8F8FF)
#define BORDERCOLOR RGBColor(215, 215, 215)

#pragma mark- 屏幕适配
#pragma mark 判断是否为4或4s
