#pragma mark 判断是否为5或5s
#define kScreenIphone5And5s (([[UIScreen mainScreen] bounds].size.height)==568)
#pragma mark 判断是否为6或6s
#define kScreenIphone6And6s (([[UIScreen mainScreen] bounds].size.height)==667)
